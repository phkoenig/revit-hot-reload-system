<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>
    <EnableHotReload>true</EnableHotReload>
    <DebugType>portable</DebugType>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <OutputPath>$(SolutionDir)Deploy\</OutputPath>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <PlatformTarget>x64</PlatformTarget>
    <LangVersion>latest</LangVersion>
    <OutputType>Library</OutputType>
    <UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>
    
    <!-- Version wird über Properties/AssemblyInfo.cs gesetzt -->
    <Version>1.1.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="RevitAPI">
      <HintPath>C:\Program Files\Autodesk\Revit 2026\RevitAPI.dll</HintPath>
      <Private>False</Private>
      <SpecificVersion>False</SpecificVersion>
      <EmbedInteropTypes>False</EmbedInteropTypes>
    </Reference>
    <Reference Include="RevitAPIUI">
      <HintPath>C:\Program Files\Autodesk\Revit 2026\RevitAPIUI.dll</HintPath>
      <Private>False</Private>
      <SpecificVersion>False</SpecificVersion>
      <EmbedInteropTypes>False</EmbedInteropTypes>
    </Reference>
  </ItemGroup>

  <!-- 🚨 KEINE Package References in der Loader-DLL! -->
  <!-- Diese gehören in die Work-DLL! -->

  <!-- Exclude Work-DLL files and temp folder from Loader-DLL compilation -->
  <ItemGroup>
    <Compile Remove="src\GeoJsonImporter.Work\**" />
    <EmbeddedResource Remove="src\GeoJsonImporter.Work\**" />
    <None Remove="src\GeoJsonImporter.Work\**" />
    <Content Remove="src\GeoJsonImporter.Work\**" />
    <Page Remove="src\GeoJsonImporter.Work\**" />
    <ApplicationDefinition Remove="src\GeoJsonImporter.Work\**" />
    
    <!-- Exclude temp folder -->
    <Compile Remove="temp\**" />
    <EmbeddedResource Remove="temp\**" />
    <None Remove="temp\**" />
    <Content Remove="temp\**" />
  </ItemGroup>

  <!-- Pre-Build Event: Prüft Architektur UND Revit-Status -->
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <PropertyGroup>
      <ScriptsPath>$(ProjectDir)scripts\</ScriptsPath>
    </PropertyGroup>
    
    <!-- 🚨 ARCHITEKTUR-VALIDATOR (temporär deaktiviert für Test) -->
    <!-- <Message Text="🔍 Prüfe Hot Reload Architektur vor dem Build..." Importance="high" /> -->
    <!-- <Exec Command="powershell -ExecutionPolicy Bypass -File &quot;$(ScriptsPath)architecture-validator.ps1&quot;" /> -->
    
    <!-- 🔍 Revit-Status Prüfung (optional) -->
    <!-- <Message Text="🔍 Prüfe Revit-Status vor dem Build..." Importance="high" /> -->
    <!-- <Exec Command="powershell -ExecutionPolicy Bypass -File &quot;$(ScriptsPath)pre-build-check.ps1&quot;" /> -->
  </Target>

  <!-- Post-Build Events für automatisches Deployment -->
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <PropertyGroup>
      <RevitAddinsPath>C:\ProgramData\Autodesk\Revit\Addins\2026\</RevitAddinsPath>
      <TargetAddinPath>$(RevitAddinsPath)GeoJsonImporter.addin</TargetAddinPath>
      <TargetDllPath>$(RevitAddinsPath)GeoJsonImporter.dll</TargetDllPath>
      <TargetPdbPath>$(RevitAddinsPath)GeoJsonImporter.pdb</TargetPdbPath>
    </PropertyGroup>
    
    <!-- Plugin-Dateien kopieren -->
    <Message Text="Copying corrected .addin file to $(TargetAddinPath)" Importance="high" />
    <Copy SourceFiles="$(ProjectDir)assets\GeoJsonImporter.addin" DestinationFiles="$(TargetAddinPath)" />
    <Message Text="Copying $(TargetPath) to $(TargetDllPath)" Importance="high" />
    <Copy SourceFiles="$(TargetPath)" DestinationFiles="$(TargetDllPath)" />
    <Message Text="Copying $(TargetDir)$(TargetName).pdb to $(TargetPdbPath)" Importance="high" />
    <Copy SourceFiles="$(TargetDir)$(TargetName).pdb" DestinationFiles="$(TargetPdbPath)" />
    
    <!-- Hinweis: NuGet-Abhängigkeiten müssen manuell kopiert werden -->
    <Message Text="Note: GeoJSON.Net.dll and Newtonsoft.Json.dll must be manually copied to Revit AddIns directory" Importance="high" />
    <Message Text="✅ Hot Reload Setup: .addin file now points to correct Revit AddIns directory!" Importance="high" />
  </Target>
</Project>